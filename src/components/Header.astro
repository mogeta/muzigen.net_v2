<header class="fixed top-0 left-0 right-0 z-50 bg-gray-900/90 backdrop-blur-md border-b border-gray-700">
	<div class="container mx-auto px-6">
		<nav class="flex items-center justify-between h-16">
			<a href="/" class="text-2xl font-bold">
				<span class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
					test.net
				</span>
			</a>
			
			<div class="hidden md:flex items-center space-x-8">
				<a href="/" class="text-gray-300 hover:text-white transition-colors duration-200">
					ホーム
				</a>
				<a href="/blog" class="text-gray-300 hover:text-white transition-colors duration-200">
					ブログ
				</a>
				<a href="#" class="text-gray-300 hover:text-white transition-colors duration-200">
					About
				</a>
				<button class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-all duration-200 transform hover:scale-105">
					お問い合わせ
				</button>
			</div>

			<!-- Mobile menu button -->
			<button class="md:hidden text-gray-300 hover:text-white" id="mobile-menu-button">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</nav>

		<!-- Mobile menu -->
		<div class="md:hidden hidden" id="mobile-menu">
			<div class="py-4 space-y-2">
				<a href="/" class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded transition-colors duration-200">
					ホーム
				</a>
				<a href="/blog" class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded transition-colors duration-200">
					ブログ
				</a>
				<a href="#" class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded transition-colors duration-200">
					About
				</a>
				<button class="w-full text-left px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors duration-200">
					お問い合わせ
				</button>
			</div>
		</div>
	</div>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script>