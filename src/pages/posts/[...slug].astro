---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <article class="mx-auto">
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{post.data.title}</h1>
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-4">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('ja-JP', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {post.data.author && (
            <span>by {post.data.author}</span>
          )}
        </div>
        {post.data.description && (
          <p class="text-xl text-gray-700 leading-relaxed">{post.data.description}</p>
        )}
        {post.data.tags && (
          <div class="flex flex-wrap gap-2 mt-4">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </header>
      
      <div class="markdown-content max-w-none">
        <Content />
      </div>
    </article>
    
    <nav class="mt-8 pt-8 border-t border-gray-200">
      <a 
        href="/posts" 
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors"
      >
        ← 記事一覧に戻る
      </a>
    </nav>
  </main>
</Layout>

<style>
  /* リセットとベーススタイル */
  .markdown-content {
    font-size: 16px;
    color: #1f2937;
    line-height: 1.7;
  }
  
  /* 全体的なリセット */
  .markdown-content * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  /* ベーステキストスタイル */
  .markdown-content,
  .markdown-content * {
    color: #1f2937;
    line-height: 1.7;
  }
  
  /* 見出しスタイル - より強力に適用 */
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3,
  .markdown-content h4,
  .markdown-content h5,
  .markdown-content h6 {
    font-weight: 700;
    color: #111827;
    margin-top: 32px;
    margin-bottom: 16px;
    line-height: 1.3;
  }
  
  .markdown-content h1 { font-size: 30px; }
  .markdown-content h2 { font-size: 24px; }
  .markdown-content h3 { font-size: 20px; }
  .markdown-content h4 { font-size: 18px; }
  
  /* 段落スタイル - より強力に適用 */
  .markdown-content p {
    margin-bottom: 16px;
    color: #1f2937;
    font-size: 16px;
    line-height: 1.7;
  }
  
  /* リストスタイル */
  .markdown-content ul,
  .markdown-content ol {
    margin-bottom: 16px;
    padding-left: 24px;
  }
  
  .markdown-content li {
    margin-bottom: 8px;
    color: #1f2937;
  }
  
  /* 引用スタイル */
  .markdown-content blockquote {
    border-left: 4px solid #93c5fd;
    padding: 12px 16px;
    margin-bottom: 16px;
    font-style: italic;
    color: #374151;
    background-color: #f9fafb;
    border-radius: 4px;
  }
  
  /* コードスタイル */
  .markdown-content code {
    background-color: #f3f4f6;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 14px;
    font-family: 'Courier New', monospace;
    color: #dc2626;
  }
  
  .markdown-content pre {
    background-color: #111827;
    color: #f9fafb;
    padding: 16px;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 16px;
  }
  
  .markdown-content pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  /* テーブルスタイル */
  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #d1d5db;
    margin-bottom: 16px;
  }
  
  .markdown-content th,
  .markdown-content td {
    border: 1px solid #d1d5db;
    padding: 12px;
    text-align: left;
  }
  
  .markdown-content th {
    background-color: #f3f4f6;
    font-weight: 600;
  }
  
  /* リンクスタイル */
  .markdown-content a {
    color: #2563eb;
    text-decoration: underline;
  }
  
  .markdown-content a:hover {
    color: #1e40af;
  }
  
  /* 画像スタイル */
  .markdown-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    margin: 16px 0;
  }
</style>